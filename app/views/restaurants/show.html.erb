<div class="container">
  <h1><%= @restaurant.name %></h1>
  <%= @restaurant.category %>
  <%= @restaurant.address %>
  <%= @restaurant.phone_number %>

  <%= link_to 'review', new_restaurant_review_path(@restaurant)  %>

  <% @restaurant.reviews.each do |review| %>
    <p><%= review.rating %></p>
    <p><%= review.content %></p>
  <% end %>


  <p><%= link_to "back", restaurants_path  %></p>
</div>
